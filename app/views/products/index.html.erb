<% provide :title, t(".clothings") %>
<div id="product-name">
  <div class="container-fluid">
    <div class="row content">
      <div class="col-sm-3 category">
        <h4>Mango Man</h4>
        <div class="input-group">
          <input type="text" class="form-control" placeholder= <%= t(".search") %>>
          <span class="input-group-btn">
            <button class="btn btn-default" type="button">
              <span class="glyphicon glyphicon-search"></span>
            </button>
          </span>
        </div>
        <% @category.each do |category| %>
          <ul class="nav nav-pills nav-stacked">
            <li><a href="#"><%= category.name %></a></li>
          </ul><br>
        <% end %>
      </div>

      <div class="col-sm-9 product">
        <div class="product-list">
          <% if @products.present? %>
            <% @products.each do |product| %>
              <fieldset class="fieldset">
                <tbody>
                  <div class="info-product">
                    <ul>
                      <div id="img-image">
                        <%= link_to image_tag(product.image_link), product_path(product) %>
                      </div>
                    </ul>

                    <ul id="list-description">
                      <li class="name-product">
                        <%= link_to product.name, product_path(product) %>
                      </li>
                    </ul>

                    <ul id="price-product">
                      <div>
                        <%= number_to_currency product.price , locale: :vi %>
                      </div>
                    </ul>

                    <ul id="ul-products">
                      <%= link_to t(".show"), product %>
                      <%= link_to t(".edit"), edit_product_path(product) %>
                      <%= link_to t(".destroy"), product_path(product),
                        data: {confirm: t(".are_you_sure?")}, method: :delete %>
                    </ul>
                  </div>
                </tbody>
              </fieldset>
            <% end %>
          <% end %>
        </div>
        <div class="clear-both"></div>
        <%= will_paginate %>
      </div>
    </div>
  </div>
</div>
